                       url: "/user/read-notifications"
                   });
               }
               
           });
           
           $('.inviteLink').click(function(){
               var element = $(this).attr('rel');
                   $.ajax({
                       url: "/user/delete-notification/id/"+element
                   });
               
           });
        });
