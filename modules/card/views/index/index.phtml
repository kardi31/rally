                var msg = {
                    type: 'existTableJoined',
                    tableid: tableid,
                    userid: '<?= $authenticatedUser['id']; ?>'
                };
                //convert and send data to server
                websocket.send(JSON.stringify(msg));
            });

            $('.closeTable').click(function () { //use clicks message send button	
