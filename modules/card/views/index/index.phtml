            if (window.location.href.indexOf("#") > -1) {
                $('.cardUserBoxWrapper').hide();
                $('.cardTableWrapper').show();
            }
            else {
                $('.cardUserBoxWrapper').show();
                $('.cardTableWrapper').hide();
            }


            $('#message').val(''); //reset text

